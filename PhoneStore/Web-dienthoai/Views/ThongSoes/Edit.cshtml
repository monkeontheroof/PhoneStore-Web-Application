@model Web_dienthoai.Models.ThongSo

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<br />
<br />
@if (TempData["ThongBaoSuccess"] != null)
{
    <div class="alert alert-success d-flex" role="alert">
        <p>
            <i class="fas fa-check"></i> <span>@TempData["ThongBaoSuccess"].ToString()</span>
        </p>

    </div>
}
@if (TempData["ThongBaoFailed"] != null)
{
    <div class="alert alert-danger d-flex" role="alert">
        <p>
            <i class="fas fa-exclamation-circle"></i> <span>@TempData["ThongBaoFailed"].ToString()</span>
        </p>
    </div>
}

<div class="container" style="background-image: url('../../Images/gradient-background.jpg');">
    <div class="inner">
        @using (Html.BeginForm("Edit", "ThongSoes", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <h3>Cập nhập thông số sản phẩm</h3>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdSP)

                <div class="form-wrapper">
                    <p class="col-md-10">Tên thông số</p>
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.TenTS, new { @readonly = "readonly", @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.TenTS, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-wrapper">
                    <p class="col-md-10">Mô tả</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
                    </div>
                </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input style="margin-left:-15px;background-color:Green" type="submit" value="Lưu" class=" button1" />
                    <a style="margin-left: -15px;" class="button1" href="~/SanPhams/Details?id=@Model.IdSP">Trở về</a>
                </div>
            </div>
        }

    </div>

</div>


