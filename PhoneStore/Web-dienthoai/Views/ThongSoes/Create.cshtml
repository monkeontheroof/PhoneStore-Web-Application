@model Web_dienthoai.Models.ThongSo

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<br />
<br />
@if (TempData["ThongBaoSuccess"] != null)
{
    <div class="alert alert-success d-flex" role="alert">
        <p>
            <i class="fas fa-check"></i> <span>@TempData["ThongBaoSuccess"].ToString()</span>
        </p>

    </div>
}
@if (TempData["ThongBaoFailed"] != null)
{
    <div class="alert alert-danger d-flex" role="alert">
        <p>
            <i class="fas fa-exclamation-circle"></i> <span>@TempData["ThongBaoFailed"].ToString()</span>
        </p>
    </div>
}



<div class="container" style="background-image: url('../../Images/gradient-background.jpg');">
    <div class="inner">

        @using (Html.BeginForm("Create", "ThongSoes", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h3>Thêm thông số</h3>

            <div class="form-wrapper" hidden>
                IdSP (*):
                @Html.EditorFor(model => model.IdSP, new { htmlAttributes = new { @class = "form-control", required = "required", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.IdSP, "", new { @class = "text-danger" })
            </div>

            <div class="form-wrapper">
                Tên thông số (*):
                @Html.EditorFor(model => model.TenTS, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.TenTS, "", new { @class = "text-danger" })
            </div>

            <div class="form-wrapper">
                Mô tả (*):
                @Html.EditorFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
            </div>


            <input style="background-color:Green" type="submit" value="Xác nhận" class=" button1" />
        }
    <div style="margin-left:238px;color:#ccc">
        <a style="margin-left: -15px;" class="button1" href="~/SanPhams/Details?id=@Model.IdSP">Trở về</a>
    </div>

    </div>

</div>

