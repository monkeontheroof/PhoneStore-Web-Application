
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_MasterLayout2.cshtml";
}

<link rel="stylesheet" href="~/Content/Image.css" />
@*<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
<link rel="stylesheet" href="~/Content/Image1.css" />*@

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class=" bg-info text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5">

                        <div class="mb-md-5 mt-md-4 pb-2" style="padding:60px">

                            <h2 class="fw-bold mb-5 text-uppercase text-center">Đăng nhập</h2>

                            @using (Html.BeginForm("DangNhap", "NguoiDung"))
                            {
                                @Html.ValidationSummary(true)
                                <div class="form-outline">
                                    <label class="form-label" for="dangnhap">Tài khoản</label>
                                    @Html.TextBox("Username", null, new { @class = " form-control", @id = "dangnhap", required = "required" })
                                    <hr class="bg-warning" />

                                </div>

                                <div class="form-outline form-white mb-2 ">
                                    <label class="form-label" for="matkhau">Mật khẩu</label>
                                    @Html.Password("Password", null, new { @class = "form-control", @id = "matkhau", required = "required" })
                                    <hr class="bg-warning" />
                                </div>
                                <p class="text-opacity-50 mb-2"> @ViewBag.ThongBao</p>
                                <div class="text-center"> <button class="btn btn-outline-light btn-lg px-5 text-center" type="submit">Đăng nhập</button></div>

                            }


                        </div>

                        <div>
                            <p class="mb-0 d-flex justify-content-center text-center ">
                                Bạn chưa có tài khoản? <a href="@Url.Action("DangKy", "NguoiDung")" class="text-white-50 fw-bold"> Đăng ký</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


