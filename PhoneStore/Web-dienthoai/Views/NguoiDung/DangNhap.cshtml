<h2 class="text-white" style=" text-align: center; font-weight: bold;">ĐĂNG NHẬP</h2>

<br />

<div class="row">

    <div class="offset-md-1 col-md-10" style="padding-left:20%; padding-right:20%">
        <h2 style="color: red;">@ViewBag.ThongBao</h2>
        @using (Html.BeginForm("DangNhap", "NguoiDung"))
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label class="text-white" for="dangnhap">Tên đăng nhập:</label>
                @Html.TextBox("Username", null, new
                {
                    @class = "form-control",
                    @id = "dangnhap",
                    required = "required"
                })
            </div>
            <br />
            <div class="form-group">
                <label class="text-white" for="matkhau">Mật khẩu:</label>
                @Html.Password("Password", null, new
                {
                    @class = "form-control",
                    @id = "matkhau",
                    required = "required"
                })
            </div>
            <br />
            <button type="submit" class="btn btn-primary" style="display: block; margin: 0 auto; margin-top: 20px; text-align: center;">ĐĂNG NHẬP</button>
            <br />
            <p class="text-white" style="text-align: center;">Chưa có tài khoản ? <a href="@Url.Action("DangKy", "NguoiDung")" style="text-decoration: none; color: red; ">Đăng ký</a></p>
        }
    </div>
</div>

