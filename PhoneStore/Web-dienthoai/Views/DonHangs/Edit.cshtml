@model Web_dienthoai.Models.DonHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<br />
<br />
@if (TempData["ThongBaoSuccess"] != null)
{
    <div class="alert alert-success d-flex" role="alert">
        <p>
            <i class="fas fa-check"></i> <span>@TempData["ThongBaoSuccess"].ToString()</span>
        </p>

    </div>
}
@if (TempData["ThongBaoFailed"] != null)
{
    <div class="alert alert-danger d-flex" role="alert">
        <p>
            <i class="fas fa-exclamation-circle"></i> <span>@TempData["ThongBaoFailed"].ToString()</span>
        </p>
    </div>
}

<div class="container" style="background-image: url('../../Images/gradient-background.jpg');">
    <div class="inner">
        @using (Html.BeginForm("Edit", "DonHangs", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <h3>Cập nhập thông tin Đơn hàng</h3>
            <div class="form-group">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaKH)
                @Html.HiddenFor(model => model.MaDH)

                <div class="form-wrapper">
                    <p class="col-md-10">Tên người nhận</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenNguoiNhan, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.TenNguoiNhan, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-wrapper">
                    <p class="col-md-10">Số điện thoại nhận</p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SDTnhan, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.SDTnhan, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>

            <div class="form-wrapper">
                <p class="col-md-10">Địa chỉ nhận</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DiaChiNhan, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.DiaChiNhan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                <p class="col-md-10">Tổng trị giá đơn hàng</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TriGia, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.TriGia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                <p class="col-md-10">Tình trạng đơn hàng</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TinhTrang, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                <p class="col-md-10">Ngày đặt hàng</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgayDH, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.NgayDH, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                <p class="col-md-10">Hình thức giao hàng</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HTGiaohang, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HTGiaohang, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-wrapper">
                <p class="col-md-10">Nhân viên xử lý</p>
                <div class="col-md-10">
                    @Html.DropDownList("MaNV", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input style="margin-left:-15px;background-color:Green" type="submit" value="Lưu" class=" button1" />
                    <a style="margin-left: -15px;" class="button1" href="~/DonHangs/Details?id=@Model.MaDH">Trở về</a>
                </div>
            </div>
        }

    </div>

</div>