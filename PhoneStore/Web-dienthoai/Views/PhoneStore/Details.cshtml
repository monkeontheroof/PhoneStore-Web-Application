@model Web_dienthoai.Models.SanPham


@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MasterLayout2.cshtml";
}

<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<link rel="stylesheet" href="~/Content/Image.css" />
<link rel="stylesheet" href="~/Content/mystyle.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>


<br />
<h2 style="text-align:center; color: white">CHI TIẾT SẢN PHẨM</h2>
<br />
<hr />

<div>



    <div class="slideshow-container">

        <div>
            @*@foreach (var item in Model.HinhSP)
            {*@
                <div class="mySlides fade">
                    @* <div class="numbertext">3 / 3</div>*@
                    <img src="~/Images/ProductView/@Model.HinhMinhHoa" style="width: 100%; height: 500px; padding-left:15%; padding-right:15%">
                </div>
            @*}*@

        </div>

    </div>

    <br>

    <div style="text-align:center">
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>

    </div>



    <hr /> <hr />
    <div style="padding-left: 100px; padding-right: 100px;">
        <h3 style="color: white; text-align: center; ">@Model.TenSP</h3>
        <p style="color: white; padding-left: 200px; padding-right: 200px; text-align: justify ">
            <span style="color: white; font-weight: bold; text-align: center; ">Mô tả:</span> @Model.MoTaSP
        </p>
        <hr />
        <h4 style="color: white;">THÔNG SỐ KỸ THUẬT:</h4>



        <div class="accordion" id="accordionExample">

            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Màn hình
                    </button>
                </h2>
                @foreach (var item in Model.ThongSoes)
                {
                    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <div class="form-group">
                                <strong>@item.TenTS:</strong>
                                <div class="col-md-10">
                                    @item.Mota
                                </div>                              
                            </div>
                        </div>
                    </div>
                }
            </div>
           
        </div>

        <hr /><hr />

    </div>

    <p class="price" style="text-align: center;">
        <span style="color: red; background-color: white; font-weight: bold;  font-size: 40px; border: 2px solid white; padding: 5px; padding-bottom: 10px; border-radius: 8px;">Giá bán: @Model.Gia VNĐ</span>
    </p>

    <hr /><hr />

    <a class="btn btn-primary" style=" margin-left: 47%; padding:20px; margin-bottom:2%; font-weight:bold; justify-content: center; align-items: center;" href="@Url.Action("ThemSP", "GioHang", new { IdSP = Model.IdSP })"> Đặt mua </a>
</div>
