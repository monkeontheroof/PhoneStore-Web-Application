@model Web_dienthoai.Models.ThuongHieu

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container" style="background-image: url('../../Images/library-background-form.jpg');">
    <div class="inner">

        @using (Html.BeginForm("Create", "ThuongHieux", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <h3>Thêm sản phẩm</h3>
            <div class="form-wrapper">
                Mã thương hiệu:
                @Html.EditorFor(model => model.MaTH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaTH, "", new { @class = "text-danger" })
            </div>


            <div class="form-wrapper">
                Tên thương hiệu:
                @Html.EditorFor(model => model.TenTH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTH, "", new { @class = "text-danger" })
            </div>



            <input style="background-color:Green" type="submit" value="Xác nhận" class=" button1" />
        }
        <div style="margin-left:238px;color:#ccc">
            <a style="margin-left: -15px;" class="button1" href="~/ThuongHieux/Index">Trở về</a>
        </div>
    </div>

</div>
