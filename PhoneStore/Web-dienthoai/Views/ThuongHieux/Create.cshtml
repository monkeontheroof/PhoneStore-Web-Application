@model Web_dienthoai.Models.ThuongHieu

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<br />
<br />
@if (TempData["ThongBaoSuccess"] != null)
{
    <div class="alert alert-success d-flex" role="alert">
        <p>
            <i class="fas fa-check"></i> <span>@TempData["ThongBaoSuccess"].ToString()</span>
        </p>

    </div>
}
@if (TempData["ThongBaoFailed"] != null)
{
    <div class="alert alert-danger d-flex" role="alert">
        <p>
            <i class="fas fa-exclamation-circle"></i> <span>@TempData["ThongBaoFailed"].ToString()</span>
        </p>
    </div>
}


<div class="container" style="background-image: url('../../Images/library-background-form.jpg');">
    <div class="inner">

        @using (Html.BeginForm("Create", "ThuongHieux", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h3>Thêm thương hiệu</h3>
            <div class="form-wrapper">
                Mã thương hiệu:
                @Html.EditorFor(model => model.MaTH, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.MaTH, "", new { @class = "text-danger" })
            </div>


            <div class="form-wrapper">
                Tên thương hiệu:
                @Html.EditorFor(model => model.TenTH, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.TenTH, "", new { @class = "text-danger" })
            </div>



            <input style="background-color:Green" type="submit" value="Xác nhận" class=" button1" />
        }
        <div style="margin-left:238px;color:#ccc">
            <a style="margin-left: -15px;" class="button1" href="~/ThuongHieux/Index">Trở về</a>
        </div>
    </div>

</div>
