@using Web_dienthoai.Models;
@model NhanVien

@{
    ViewBag.Title = "AdminProfile";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    TaiKhoanNV ad = Session["Admin"] as TaiKhoanNV;
}

<style>
    td, th, tr {
        border: 0px solid #dddddd;
        text-align: left;
        padding: 8px;
    }


    .profile-table {
        align-self: center;
        justify-content: space-around;
        width: 100%;
    }

        .profile-table tr td {
            width: 20%;
            padding-left: 20px;
            text-align: center;
        }
</style>

<h2 style="text-align:center;">Admin Profile</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(id => id.MaNV)
<table class="table-borderless profile-table">
    <tr>

        <td style="text-align:center;"><img src="~/Images/219983.png" width="30%" style="margin-left:20px;" class="profileImg" /></td>
        <td style="text-align:left;">

            <div style="width: 30%">
                @Html.EditorFor(model => model.Hoten, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Hoten, "", new { @class = "text-danger" })
            </div>

        </td>
    </tr>
    <tr>
        <td>@Html.LabelFor(model => model.ChucVu, "Vai trò")</td>
        <td style="text-align:left;">@Model.ChucVu</td>
    </tr>

</table>

    <hr />
    <table class="table-borderless profile-table">
        <tr>
            <td>@Html.LabelFor(model => model.TaiKhoanNV.Username, "Tài khoản")</td>
            <td>
                <div style="width: 30%">
                    @Html.EditorFor(model => model.TaiKhoanNV.Username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TaiKhoanNV.Username, "", new { @class = "text-danger" })
                </div>
            </td>
        </tr>
        
        <tr>
            <td>@Html.LabelFor(model => model.TaiKhoanNV.Password, "Mật khẩu")</td>
            <td style="text-align:left">
                <div style="width: 30%">
                    @Html.PasswordFor(model => model.TaiKhoanNV.Password)
                </div>
            </td>
        </tr>
    </table>
    <br />
    <br />
    <div style="padding-left: 40rem">
        <input type="submit" value="LƯU" class="btn btn-success" />
    </div>
}

<p>
    @Html.ActionLink("Back to List", "Index")
</p>
